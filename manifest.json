{
  "manifest_version": 3,
  "name": "blog2pdf",
  "version": "0.0.1",
  "description": "Download any article in PDF",
  "permissions": ["activeTab", "tabs", "scripting", "storage"],
  "action": {
    "default_popup": "/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["popup.js"]
    }
  ],
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  }
}
